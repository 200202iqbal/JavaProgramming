package ex1;
import java.util.Scanner;

public class BranchRep1 {

	public static void main (String[] args) {

	Scanner sc =  new Scanner (System.in);

	System.out.print("数字を入力してください :");
	int num = sc.nextInt();
	
	if ( num%4 == 0 )
	{
		System.out.println("\n4の倍数です。");
		System.out.println("余り : " + num%4);
	}else 
	{
		System.out.println("\n34の倍数ではありません。");
		System.out.println("余り : " + num%4);
	}

	

	}
}
