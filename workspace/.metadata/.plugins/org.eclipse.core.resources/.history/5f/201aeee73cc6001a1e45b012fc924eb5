package ex3;

public class ex5 {

	public static void main(String[] args) {
		// TODO 自動生成されたメソッド・スタブ
		
		int a = 0 ;
		for ( int j = 1 ; j <= 4 ; j++)
		{

			for (int i = 1 ; i <= j ; i++)
			{
				System.out.print("☆");
			}
			if ( j == 4 )
			{
				j = 0;
			
			}
			a++;
			if ( a == a*3 )
			{
				break;
			}
			System.out.println();
		}

	}

}
